{{!-- index page --}}

<div class="jumbotron">
	<div class="col-sm-offset-3">
		<h1>匿名聊天系统</h1>
		<p>这是一个基于socket.io和Node.js的匿名聊天系统</p>
		<br />
		<div class="col-sm-offset-1">
			<a class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">进入</a>
			<a class="btn btn-default btn-lg" href="javascript:void(0)" data-toggle="tooltip" data-placement="right" title="功能尚未完成，敬请期待 ^_^">微信登录</a>
		</div>
		<!-- 模态框（Modal） -->
		<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	    	<div class="modal-dialog">
	        	<div class="modal-content">
	            	<div class="modal-header">
	                	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	                	<h4 class="modal-title" id="myModalLabel">请输入你的姓名:</h4>
	            	</div>
	            	<div class="modal-body">
	            		<br />
	            		<div class="container">
		            		<form class="form-horizontal" method="get" action="/chatroom">
		            			<div class="form-group">
		            				<div  class="col-sm-offset-1 col-sm-8">
		            					<input type="text" class="form-control" name="username" />
		            				</div>
		            			</div>
		            			<br />
		            			<div class="form-group">
		                			<div class="col-sm-offset-8">
		                				<button type="submit" class="btn btn-primary">确定</button>
			            				<button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
		                			</div>
		            			</div>
		            		</form>
	            		</div>
	            	</div>
	            	<div class="modal-footer">
						<small id="tip" class="text-muted"></small>
	            	</div>
	        	</div><!-- /.modal-content -->
	    	</div><!-- /.modal -->
		</div>
	</div>
</div>

{{#section 'javascript'}}
<script type="text/javascript">
	$(document).ready(function() {

		$(function() { $("[data-toggle='tooltip']").tooltip(); });

		$('#tip').html(`现在是北京时间：${(new Date()).getFullYear()}年
						${((new Date()).getMonth())+1}月
						${(new Date()).getDay()}日
						 ${Date().substring(16, 21)}
						, 请勿沉迷聊天无法自拔哦 ^_^`);
	})
</script>
{{/section}}